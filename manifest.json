{
  "manifest_version": 3,
  "name": "Prompt Vault",
  "version": "1.1.0",
  "description": "Universal LLM prompt manager for Claude, ChatGPT, Grok, Perplexity, Gemini, and Meta",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://grok.x.com/*",
    "https://grok.com/*",
    "https://x.com/*",
    "https://www.perplexity.ai/*",
    "https://gemini.google.com/*",
    "https://www.meta.ai/*",
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://grok.x.com/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://www.perplexity.ai/*",
        "https://gemini.google.com/*",
        "https://www.meta.ai/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": [
        "https://claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://grok.x.com/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://www.perplexity.ai/*",
        "https://gemini.google.com/*",
        "https://www.meta.ai/*"
      ]
    }
  ]
}
